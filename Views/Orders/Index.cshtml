@model List<string>

<h2>Orders Queue</h2>

<form asp-action="AddOrder" method="post">
    <div class="mb-3">
        <label>New Order Details</label>
        <input type="text" name="orderDetails" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Add Order</button>
</form>

<hr />

<h4>Current Orders in Queue</h4>
<ul class="list-group">
    @foreach (var msg in Model)
    {
        <li class="list-group-item">@msg</li>
    }
</ul>

